#include<stdio.h>
struct node
{
int data;
struct node* link;
};
void add_at_beg(int num);
void del_at_beg();
void display();
struct node* head=NULL;
main()
{
	int opt,num;
	while(1)
	{
		printf("select the option\n");
		printf("Menu\n 0.exit(0)\n 1.add_at_beg\n 2.del_at_beg\n 3.display\n 4.Del_entire_list\n 5.count_the_no.of_nodes\n 6.search\n");
		scanf("%d"&opt);
		__fpurge(stdin);
		switch(opt)
		{
			case 0: exit(0);
			
			case 1: printf("Enter the num\n");
				scanf("%d",&num);
				add_at_beg(num);
				break;
				
			case 2: del_at_beg();
				break;
			
			case 3: display();
				break;
		}
	}
}

void add_at_beg(int num)
{
	struct node* ptr=(struct node*)malloc(1*sizeof(struct node));
	if(ptr==NULL)
	{
		printf("failed to allocate the memory\n");
		exit(1);
	}
	ptr->data=num;
	ptr->link=head;
	head=ptr;
}
void del_at_beg()
{
	struct node* temp;
	if(head==NULL)
	{
		printf("List is empty\n");
		return;
	}
	temp=head;
	head=head->link;
	free(temp);
}
void display()
{
	struct node*temp;
	if(head==NULL)
	{
		printf("List is empty\n");
		return;
	}
	temp=head;
	while(temp!=NULL)
	{
		printf("%d\n",temp->data);
		temp=temp->link;
	}
}
	
	
	
	
	
	
	
	
	
	
	
		

